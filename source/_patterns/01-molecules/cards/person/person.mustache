<div class="card card_person {{ card.styleModifier }}" itemprop="employee" itemscope="" itemtype="http://schema.org/Person">
	<div class="card-content">
		{{# card.image }}
		<div class="card-image">
			<a href="{{ url }}" itemprop="url">{{> atoms-headshot }}</a>
		</div>
		{{/ card.image }}
		<div class="card-details">
			<div class="card-text">
				{{> molecules-heading-person }}
				<div class="description" itemprop="description">
					{{> molecules-contact-point }}
					<span class="paragraph-end"></span>
				</div>
			</div>

			<div class="card-action">
				{{> atoms-text-link }}
			</div>
		</div>
	</div>
</div>