<div class="block block_listing person" onclick="location.href='{{ url }}'" itemtype="http://schema.org/Person" itemscope="" itemprop="employee">
	<div class="block--link">
        <div class="block--image">
            <img src="{{ img.person.src }}" itemprop="image"/>
        </div>
        <div class="block--text text g g-1up">
            <div class="gi">
                <h3 class="h4" itemprop="name">{{ name.first }} {{ name.last }}</h3>
                <div class="person--job">
                	<span itemprop="jobTitle">Job Title</span>
                </div>
            </div>
            <div class="gi">
                {{> molecules-contact-point }}
            </div>
            <div class="gi">
            	<a href="{{ url }}" itemprop="url">Full profile&hellip;</a>
            </div>
        </div>
    </div>
</div>