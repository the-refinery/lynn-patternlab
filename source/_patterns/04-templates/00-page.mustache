<div id="page" class="l-page">
    {{> organisms-header }}
    
    <div id="midsection">
        <div role="main" class="l-two-col">
            <div class="l-main">
                {{# article }}
                    {{> species-article }}
                {{/ article }}

                {{# collection }}
                    {{> species-collection }}
                {{/ collection }}

                {{# folder }}
                    {{> species-folder }}
                {{/ folder }}

                {{# directory.person }}
                    {{> species-person }}
                {{/ directory.person }}
            </div>
            <div class="l-sidebar">
                {{> molecules-action-list }}
            </div>
        </div>
        
        <div class="l-nav--column">
            {{> molecules-left-column-nav }}
        </div>
    </div>

    {{> organisms-footer }}

</div>